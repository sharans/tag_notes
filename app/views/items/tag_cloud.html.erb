<h1 align="center"> Chennai Office Retro - 2010</h1>
<div class="column-left">
  <div class="positives listing">
    <h2>We are happy about...</h2>

    <div class="tag_cloud">
      <% tag_cloud(@positives_tags, %w(          css1 css2 css3 css4 css5 css6         )) do |tag, css_class| %>
          <%= link_to tag.name, tag_url(:tag => tag.name, :category => :positives), :class => css_class %>
      <% end %>
    </div>
  </div>

  <div class="concerns listing">
    <h2>We are worried about...</h2>

    <div class="tag_cloud">
      <% tag_cloud(@concerns_tags, %w(          css1 css2 css3 css4 css5 css6         )) do |tag, css_class| %>
          <%= link_to tag.name, tag_url(:tag => tag.name, :category => :concerns), :class => css_class %>
      <% end %>
    </div>
  </div>

</div>

<div class="column-middle">
  <h2>Most common</h2>

  <div id="accordion">
    <% RetroItem::CATEGORIES.each do |category|
        items = instance_variable_get("@top_#{category}")
    %>
        <h3><a href="#" class="<%= category %>"><%= category.to_s.humanize %></a></h3>

        <div>
          <ol>
            <% items.each do |item| %>
                <li><%= item.content %></li>
            <% end %>
          </ol>
        </div>
    <% end %>
  </div>
</div>

<div class="column-right">
  <div class="wishes listing">
    <h2>Our Wishes</h2>

    <div class="tag_cloud">
      <% tag_cloud(@wishes_tags, %w(          css1 css2 css3 css4 css5 css6         )) do |tag, css_class| %>
          <%= link_to tag.name, tag_url(:tag => tag.name, :category => :wishes), :class => css_class %>
      <% end %>
    </div>
  </div>
  <div class="risks listing">
    <h2>Risks</h2>

    <div class="tag_cloud">
      <% tag_cloud(@risks_tags, %w(          css1 css2 css3 css4 css5 css6         )) do |tag, css_class| %>
          <%= link_to tag.name, tag_url(:tag => tag.name, :category => :risks), :class => css_class %>
      <% end %>
    </div>
  </div>
</div>

<script>
    $(document).ready(function() {
        $("#accordion").accordion({
            event: "mouseover",
            collapsible: true
        });
    });
</script>

<script type="text/javascript">

    $(".tag_cloud a").fancybox({
        'transitionIn'    :    'elastic',
        'transitionOut'    :    'elastic',
        'speedIn'        :    600,
        'speedOut'        :    200,
        'overlayShow'    :    false
    });

</script>